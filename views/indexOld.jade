extends layout
block content
    .message
        //- var message= 'Спасибо за авторизацию'
        if (message)
            .alert.alert-info.alert-dismissible(role='alert')
                button.close(type='button', data-dismiss='alert')
                    span(aria-hidden='true') ×
                    span.sr-only Close
                strong= message
    .row.maincarousel
        .jcarousel-wrapper
            #intro-carousel.jcarousel
                ul
                    li
                        .mc-back(style='background-image: url(\'assets/images/main-banners/b16.jpg\');')
                            .masters-banner-logo(style='left: 75%; margin-top: -85px;')
                            h1(style='padding-left: 50%; color: rgb(255, 184, 0); font-size: 43px;')  Удивительные изделия ручной работы
                            h1(style='font-size: 33px; margin-left: 50%; color: rgb(207, 116, 0);') от мастеров со всей России
                    li
                        .mc-back(style='background-image: url(\'assets/images/main-banners/b5-2.jpg\');')
                            h1(style='color: rgb(255, 255, 255); line-height: 82px; text-shadow: 3px 3px 0px rgb(0, 0, 0); margin-top: -25px; letter-spacing: -2px; font-size: 92px;') Огромный выбор
                            h1(style='font-size: 57px; color: rgb(255, 184, 0); line-height: 68px; text-shadow: 3px 3px 0px rgb(0, 0, 0); padding: 0 15%; letter-spacing: -2px;') товаров народного творчества
                            h1(style='padding: 0 36%; line-height: 25px; margin-top: 8px; letter-spacing: 0px; font-size: 26px; color: rgb(255, 184, 0);') от повседневных мелочей до авторских шедевров
                    li
                        .mc-back(style='background-image: url(\'assets/images/main-banners/b11.jpg\');')
                            h1(style='padding-right: 50%; font-size: 65px; line-height: 60px; color: rgb(255, 92, 61);')
                                | Все работы
                                br
                                | мастеров
                            h1(style='font-size: 51px; margin-top: 20px; color: rgb(255, 163, 0);') сделаны с душой и неповторимы
                            p(style='margin-top: 15px; font-size: 18px; color: rgb(177, 113, 0);')  Изделия выполненные руками мастера хранят его тепло
                    li
                        .mc-back(style='background-image: url(\'assets/images/main-banners/b8.jpg\'); text-align: left; padding-left: 10%; padding-top: 180px;')
                            h1(style="font-size: 64px; color: rgb(255, 61, 0); margin-bottom: 17px;") Лавка
                            h1(style='margin-top: -14px; color: rgb(255, 61, 0); text-shadow: 1.5px 1.5px 0 black; font-weight: bold; letter-spacing: -1px;') это огромное сообщество, где
                            h1(style='font-size: 78px; color: rgb(255, 204, 0);') мастера открыты
                            h1(style='margin-top: 20px; color: rgb(255, 204, 0);') для общения с покупателями
                    li
                        .mc-back(style='background-image: url(\'assets/images/main-banners/b7-2.jpg\');')
                            h1(style='font-size: 48px; color: rgb(255, 204, 0); line-height: 53px; text-shadow: 3px 3px black; margin-top: -16px;')
                                | Окружите
                                br
                                | себя и своих близких
                            h1(style='font-size: 64px; margin-top: 10px; color: rgb(253, 61, 0); text-shadow: 3px 3px rgb(14, 14, 14); letter-spacing: 2px;') "живыми" вещами
                            .masters-banner-logo(style='margin-top: 0px; width: 200px; margin-left: -100px; height: 100px;')
            a#intro-jcarousel-control-prev.jcarousel-control-prev(href='#')
                img(src='assets/images/lef.png')
            a#intro-jcarousel-control-next.jcarousel-control-next(href='#')
                img(src='assets/images/righ.png')
            p.jcarousel-pagination
    .row.superproducts
        h3.super-products-header  Супер предложения
        .jcarousel-wrapper
            #super-products-jcarousel.jcarousel
                ul
                    each sp in superproducts
                        - if (highlightarray[sp._id]) {var extraclass = 'extraproduct'} else {var  extraclass=""}
                        li(class=extraclass)
                            a(href='/product-' + sp._id)
                                img(src=sp.previewImg, style='width: 100%;', onError="this.onerror=null;this.src='assets/images/tovar.png';")
                                .tovarname=sp.name
                                .tovarCartFooter
                                    .rating
                                    - var parsdprice=parseInt( sp.price.replace(/\s+/g, ''))
                                    if (isNaN(parsdprice))
                                        .noprice
                                            | цена
                                            br
                                            | не указана
                                    else
                                        .price= parsdprice
                                            i.fa.fa-rub.valuta
                            .master
                                a(href="/workshop-" + prodWorkInfo[sp._id]._id)
                                    .master-avatar(style="background-image:url('" + prodWorkInfo[sp._id].workshopLogo + "')")
                                .master-works-preview
                                    .master-works-header= prodWorkInfo[sp._id].name
