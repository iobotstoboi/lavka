                                    a(href='')
                                        img(src='assets/images/tovar.png')
            a#super-products-control-prev.jcarousel-control-prev(href='#')
                img(src='assets/images/lef-white-bold.png', style='width: 10px;')
            a#super-products-control-next.jcarousel-control-next(href='#')
                img(src='assets/images/righ-white-bold.png', style='width: 10px;')
            p.jcarousel-pagination
    .row.newsblogs(style='box-shadow: 0 10px 20px -5px rgba(0, 0, 0, 0.36);')
        .col-md-6
            each article,index in articles
                - var aclass;
                - if (index == '0') {aclass = 'active'} else {aclass=""}
                .newsitem(class="" + aclass, id="article" + index, style="background-image: url('" + article.previewImg + "');")
        .col-md-3
            .article-previews
                each article,index in articles
                    - var aclass;
                    - if (index == '0') {aclass = 'active'} else {aclass=""}
                    .article-preview-item(class="" + aclass,data-article='article'+ index)
                        h3= article.title
                        p= article.introtext + ' '
                            a(href="/article-" + article._id) Читать дальше
                        hr
        .col-md-3
            .news-blog-ads(style='background-image: url(\'assets/images/banners/blogbanner5.jpg\'); background-size: cover; background-position: center;')
